{
  "name": "@lulee/notion-local-mcp",
  "version": "1.0.1",
  "description": "MCP server for searching Notion local cache (SQLite) - Fast, offline, no API limits",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "notion-local-mcp": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "setup": "node dist/cli.js setup",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "notion",
    "mcp",
    "sqlite",
    "search",
    "claude",
    "model-context-protocol",
    "local-cache",
    "offline"
  ],
  "author": "lu1ee",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lulee/notion-local-mcp.git"
  },
  "homepage": "https://github.com/lulee/notion-local-mcp#readme",
  "bugs": {
    "url": "https://github.com/lulee/notion-local-mcp/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^11.7.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.0",
    "typescript": "^5.7.2"
  }
}
